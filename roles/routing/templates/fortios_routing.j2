{% if routes is defined %}
config router static
{% for item in routes %}
edit 0
set device {{item.interface}}
set dst {{item.destination_subnet}} {{item.destination_mask}}
{% if 'gateway' in item %}
set gateway {{item.gateway}}
{% endif %}
{% if 'metric' in item %}
set distance {{item.metric}}
{% endif %}
